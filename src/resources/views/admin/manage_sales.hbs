<main id="view-panel">
	<div class="container-fluid">
		<div class="col-lg-12">
			<form class="card" method="POST" action="/admin/manage_sales">
				<div class="card-header">
					<large class="card-title">
						<b>Quản lý thu nhập</b>
					</large>
					<button class="btn btn-primary btn-block col-md-2 float-right" type="submit" id="new_flight">Xem
						doanh thu</button>
				</div>
				<div class="card-body">
					<div class="table-responsive">
						<table class="table table-bordered" id="flight-list">
							<colgroup>
								<col width="30%">
								<col width="70%">
							</colgroup>
							<thead>
								<tr>
									<th class="text-center">Ngày/Tháng/Năm</th>
									<th class="text-center">Doanh thu</th>
								</tr>
							</thead>
							<tbody class="table tbody">
								<tr>
									<div action="">
										<td class="text-center"><input type="date" name="departure_datetime"
												id="departure_datetime" class="form-control" value="{{date}}"></td>
										<td class="text-center" id="result">{{price}}</td>
									</div>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
			</form>
		</div>
	</div>
</main>