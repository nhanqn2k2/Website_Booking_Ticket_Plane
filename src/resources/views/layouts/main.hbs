{{> header}}
{{#if success_messages}}
	<div id="myAlert" style="text-align: center; width: 300px; left: 80%" class="alert alert-success">
		<a href="#" id="linkClose" class="close" name="close">&times;</a>
		<strong>{{success_messages}}</strong>
	</div>
	{{/if}}
	{{#if error_messages}}
	<div id="myAlert" style="text-align: center; width: 300px; left: 80%" class="alert alert-danger">
		<a href="#" id="linkClose" class="close" name="close">&times;</a>
		<strong>{{error_messages}}</strong>
	</div>
	{{/if}}
{{{body}}}
{{> footer}}

<script>
    $(document).ready(function(){
		$('#myAlert').show('fade');
		setTimeout(function(){
			$('#myAlert').hide('fade');
		}, 2000);
		$('#linkClose').click(function(){
			$('#myAlert').hide('fade');
		})
	})

</script>