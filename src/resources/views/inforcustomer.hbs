<form id="registerForm" name="sentRegister" novalidate="novalidate" method="POST" action="/addTicket">
    <section class="mt-30">
        <div class="container">
            <div class="row d-flex justify-contnet-center border border-dark">
                <div class="col-lg-12 post-list " style="background-color: #CBA6FB;">
                    <div class="media align-items-center">
                        <div class="media-body">
                            <h4><span><img src="img/information/nguoilon.png" alt=""></span> Người lớn</h4>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 mt-30">
                    <div class="row">
                        <div class="offset-2 col-md-8">
                            <div class="form-group">
                                <input class="form-control" name="username"
                                    value="{{chooseOne dataUser.username userI.name}}" id="username" type="text"
                                    placeholder="Họ và tên *" required="required">
                                <p class="help-block text-danger"></p>
                            </div>
                            <select class="form-select mb-3" id="gender" name="gender" aria-label="Default select example">
                                <option value="Nam" {{selected dataUser.gender 'Nam'}}>Nam</option>
                                <option value="Nữ" {{selected dataUser.gender 'Nữ'}}>Nữ</option>
                            </select>
                            <div class="form-group">
                                <input class="form-control" value="{{dataUser.date}}" name="date" id="date" type="date"
                                    placeholder="Ngày sinh *" required="required">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input class="form-control" value="{{dataUser.identity}}" name="identify" id="identify"
                                    type="text" placeholder="CMND/ CCCD *" required="required">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input class="form-control" name="email"
                                    value="{{chooseOne dataUser.email userI.email}}" id="email" type="email"
                                    placeholder="Email *" required="required">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input class="form-control" name="phone"
                                    value="{{chooseOne dataUser.phone userI.phoneNumber}}" id="sdt" type="number"
                                    placeholder="Số điện thoại *" required="required">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input class="form-control" value="{{dataUser.location}}" name="location" id="where"
                                    type="text" placeholder="Địa chỉ *" required="required">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    <section class="mt-10">
        <div class="container">
            <div class="row d-flex">
                <div class="col-lg-12 post-list">
                    <div class="media align-items-center ">
                        <div class="media-body ">
                            <div style="display: none;">
                                <input type="text" id="idTicketOne" name="idTicketOne" value="{{chooseOne idTicketOne data.idTicketOne}}">
                                <input type="text" id="idTicketTwo" name="idTicketTwo" value="{{chooseOne idTicketTwo data.idTicketTwo}}">
                                <input type="text" name="flightMotChieu" value="{{chooseOne flightMotChieu data.flightIdMotChieu}}">
                                <input type="text" name="flightKhuHoi" value="{{chooseOne flightKhuHoi data.flightIdKhuHoi}}">
                            </div>
                            <button type="submit" class="btn" value="submit">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>
