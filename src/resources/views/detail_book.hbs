<div class="favourite-place place-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-tittle text-center">
                    <h2>CHI TIẾT VÉ</h2>
                </div>
            </div>
        </div>
        <div class="row d-flex justify-contnet-center border border-dark">
            <div class="col-lg-12 post-list " style="background-color: #4980f7;">
                <div class="media align-items-center">
                    <div class="media-body">
                        <h4>Chi tiết vé</h4>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 mt-30">
                <form id="registerForm" name="sentRegister" novalidate="novalidate" method="POST" action="/search">
                    <div class="row">
                        <div class=" col-md-6">
                            <div class="form-group">
                                <p style="font-weight: 500;">Mã số vé: <span style="font-weight: bold;">{{ticket._id}}</span></p>
                            </div>
                            <div class="form-group">
                                <p style="font-weight: 500;">Tên khách hàng: <span style="font-weight: bold;">{{ticket.customerId.customerName}}</span>
                                </p>
                            </div>
                            <div class="form-group">
                                <p style="font-weight: 500;">Số điện thoại: <span style="font-weight: bold;">{{ticket.customerId.phoneNumber}}</span>
                                </p>
                            </div>
                            <div class="form-group">
                                <p style="font-weight: 500;">Mã máy bay: <span style="font-weight: bold;">{{ticket.flightId._id}}</span>
                                </p>
                            </div>
                            <div class="form-group">
                                <p style="font-weight: 500;">Giờ khởi hành: <span style="font-weight: bold;">{{dateTicket ticket.flightId.hourStart}}</span></p>
                            </div>
                            <div class="form-group">
                                <p style="font-weight: 500;">Giờ hạ cánh: <span style="font-weight: bold;">{{dateTicket ticket.flightId.hourEnd}}</span></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <p style="font-weight: 500;">Nơi khởi hành: <span style="font-weight: bold;">{{location ticket.flightId.fromPlace}}</span></p>
                            </div>
                            <div class="form-group">
                                <p style="font-weight: 500;">Nơi đến: <span style="font-weight: bold;">{{location ticket.flightId.toPlace}}</span>
                                </p>
                            </div>
                            <div class="form-group">
                                <p style="font-weight: 500;">Số ghế: <span style="font-weight: bold;">{{ticket.seatNumber}}</span></p>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>